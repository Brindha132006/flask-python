<script>
const imageInput=document.getElementById("imageInput");
const history=document.getElementById("history");

imageInput.onchange=()=>{
  const img=new Image();
  img.src=URL.createObjectURL(imageInput.files[0]);
  preview.innerHTML="";preview.appendChild(img);
};

function detectDisease(){
  const diseases=["Normal","Pneumonia","Covid-19","Brain Tumor"];
  const d=diseases[Math.floor(Math.random()*diseases.length)];
  const c=Math.floor(80+Math.random()*15);

  progress.style.strokeDashoffset=408-(408*c/100);
  confidence.innerText=c+"%";

  if(d==="Normal"){
    progress.style.stroke= "#22c55e";
    resultText.innerHTML='<div class="tag normal">Normal Image</div>';
  }else{
    progress.style.stroke="#ef4444";
    resultText.innerHTML='<div class="tag abnormal">Disease Detected: '+d+'</div>';
  }

  explainPanel.style.display="block";
  setTimeout(()=>{
    b1.style.width=(60+Math.random()*30)+"%";
    b2.style.width=(50+Math.random()*40)+"%";
    b3.style.width=(55+Math.random()*35)+"%";
  },200);

  history.innerHTML='<div class="history-item">'+new Date().toLocaleString()+
  ' — '+d+' ('+c+'%)</div>'+history.innerHTML;
}

function switchTab(id,el){
  document.querySelectorAll(".tab").forEach(t=>t.classList.remove("active"));
  el.classList.add("active");
  document.querySelectorAll(".tab-content").forEach(c=>c.classList.remove("active"));
  document.getElementById(id).classList.add("active");
}
</script>

